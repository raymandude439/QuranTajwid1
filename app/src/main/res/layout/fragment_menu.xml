<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btnQuran"
            android:layout_width="337dp"
            android:layout_height="169dp"
            android:background="#FFFFFF"
            android:src="@drawable/menu_alquran__1_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.005"
            tools:srcCompat="@drawable/menu_alquran__1_" />

        <ImageButton
            android:id="@+id/btnTajwid"
            android:layout_width="337dp"
            android:layout_height="169dp"
            android:layout_marginTop="21dp"
            android:background="#CDDC39"
            android:src="@drawable/menu_tajwid__2_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnQuran"
            app:layout_constraintVertical_bias="0.027"
            tools:srcCompat="@drawable/menu_tajwid__2_" />

        <ImageView
            android:id="@+id/btnAU"
            android:layout_width="337dp"
            android:layout_height="169dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/menu_history"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTajwid" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>