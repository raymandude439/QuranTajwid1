<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Juz2Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/pause"
            app:layout_constraintStart_toEndOf="@+id/play"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icons8_pause_button_30" />

        <ImageButton
            android:id="@+id/seekleft"
            app:layout_constraintEnd_toStartOf="@+id/stop"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icons8_back_to_30" />

        <ImageButton
            android:id="@+id/play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icons8_play_button_circled_30" />

        <TextView
            android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewJuz2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Al - Fatihah Ayat 1" />

        <ImageButton
            android:id="@+id/seekright"
            app:layout_constraintStart_toEndOf="@+id/pause"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icons8_next_page_30" />

        <ImageButton
            android:id="@+id/stop"
            app:layout_constraintEnd_toStartOf="@+id/play"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icons8_square_full_32" />

        <ImageButton
            android:id="@+id/prev"
            app:layout_constraintEnd_toStartOf="@+id/imageViewJuz2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/icons8_back_arrow_48" />

        <ImageButton
            android:id="@+id/next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageViewJuz2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="43dp"
            android:layout_height="44dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/icons8_circled_right_48" />

        <ImageView
            android:id="@+id/imageViewJuz2"
            android:layout_width="283dp"
            android:layout_height="442dp"
            android:onClick="fragChangeImage"
            android:src="@drawable/albaqarah21"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>